---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/landing/Hero.astro';
import SectionOne from '../components/landing/SectionOne.astro';
import Cta from '../components/global/Cta.astro';
import Footer from '../components/global/Footer.astro';
import { AstroSeo } from '@astrolib/seo';
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Query Master"
  description="Not just another MySQL GUI"
  openGraph={{
    url: 'https://www.querymaster.io',
    title: 'Query Master',
    description: 'Not just another MySQL GUI',
    images: [
      {
        url: 'https://www.michaelandreuzza.com/opengraph/social-og.jpg',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: 'https://www.michaelandreuzza.com/opengraph/twitter-og.jpg',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: 'https://www.michaelandreuzza.com/opengraph/social-og.jpg' },
      { url: 'https://www.michaelandreuzza.com/opengraph/twitter-og.jpg' },
    ],
    site_name: 'Query Master',
  }}
/>
<BaseLayout>
  <Hero />
  <SectionOne />
  <Cta />
  <Footer />
</BaseLayout>
