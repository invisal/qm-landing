---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/global/Navigation.astro';
import Footer from '../components/global/Footer.astro';
import { AstroSeo } from '@astrolib/seo';
import { Content as TermsSection } from '../components/infopages/Terms.md';
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Code of Conducts"
  description="Code of Conducts for QueryMaster's website"
  canonical="https://www.querymaster.io"
  openGraph={{
    url: 'https://www.querymaster.io',
    title: 'QueryMaster - Code of Conducts',
    description: 'Code of Conducts for QueryMaster',
    images: [
      {
        url: '/QueryMaster-half.png',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: '/QueryMaster.png',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
    ],
    site_name: 'QueryMaster',
  }}
/>
<BaseLayout>
  <Navigation />
  <section id="code-of-conducts">
    <article class="prose mx-auto px-5 md:px-8 py-10">
      <TermsSection />
    </article>
  </section>
  <Footer />
</BaseLayout>
