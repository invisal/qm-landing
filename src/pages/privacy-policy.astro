---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
import Navigation from "../components/global/Navigation.astro";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="QueryMaster"
  description="QueryMaster is powerful cross-platform desktop SQL client."
  canonical="https://www.querymaster.io"
  openGraph={{
    url: "https://www.querymaster.io",
    title: "QueryMaster - SQL Client from the future",
    description: "QueryMaster is powerful cross-platform desktop SQL client.",
    images: [
      {
        url: "/QueryMaster-half.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "/QueryMaster.png",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
    ],
    site_name: "QueryMaster",
  }}
/>
<BaseLayout>
  <Navigation />

  <div class="container w-full max-w-4xl mx-auto p-2 mt-10 mb-10">
    <h1 class="text-4xl font-bold mb-5">Privacy Policy</h1>

    <p>
      This privacy policy explains how "Query Master" collects, uses, and shares
      your personal information when you use our product.
    </p>

    <h3 class="text-xl font-bold mb-5 mt-5">Information We Collect</h3>
    <p>
      We collect information you provide to us directly, such as your name and
      email address.
    </p>

    <h3 class="text-xl font-bold mb-5 mt-5">How We Use Your Information</h3>
    <p>
      We use your information to provide and improve our product, to communicate
      with you, and to personalize your experience.
    </p>

    <h3 class="text-xl font-bold mb-5 mt-5">Information Sharing</h3>
    <p>
      We do not share your personal information with third parties except as
      necessary to provide and improve our product, to comply with legal
      obligations, or at your direction. We will never sell your personal
      information.
    </p>

    <h3 class="text-xl font-bold mb-5 mt-5">Changes to this Policy</h3>
    <p>
      We may update this policy from time to time. If we make significant
      changes, we will notify you by email or by posting a notice on our
      website.
    </p>
    <p class="mb-3 mt-3">
      If you have any questions or concerns about this policy, please contact us
      at invisal@invisal.com.
    </p>
  </div>

  <Footer />
</BaseLayout>
