---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import SectionOne from "../components/landing/SectionOne.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
import Navigation from "../components/global/Navigation.astro";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Querym"
  description="QueryMaster is powerful cross-platform desktop SQL client."
  canonical="https://www.querymaster.io"
  openGraph={{
    url: "https://www.querymaster.io",
    title: "Querym - SQL Client from the future",
    description: "Querym is powerful cross-platform desktop SQL client.",
    images: [
      {
        url: "/QueryMaster-half.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "/QueryMaster.png",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
    ],
    site_name: "Querym",
  }}
/>
<BaseLayout>
  <Navigation />
  <Hero />
  <SectionOne />
  <Footer />
</BaseLayout>
